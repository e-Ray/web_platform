{
  "rules": {
    "erays": {
      ".read": "true",
      ".write": "newData.child('isAdmin').val() == true",
      "$id": {
        "info": {
          "owner": {
            ".validate": "newData.hasChildren(['isAdmin'])",
            "isAdmin": {
              ".validate": "newData.isBoolean()"
            },
            "$other": {
              ".validate": "false"
            },
            ".read": "auth != null && auth.uid == $id"
          },
          "location": {
            ".read": "true"
          }
        },
        "$sensorid": {
          "$year": {
            "$month": {
              "$day": {
                ".indexOn": [
                  "timestamp"
                ]
              }
            }
          }
        },
        "waterlevel": {
          ".validate": "true",
          ".read": "true"
        },
        "watertemp": {
          ".validate": "true",
          ".read": "true"
        },
        "temp": {
          ".validate": "true",
          ".read": "true"
        },
        "winddir": {
          ".validate": "true",
          ".read": "true"
        },
        "windspeed": {
          ".validate": "true",
          ".read": "true"
        },
        "ph": {
          ".validate": "true",
          ".read": "true"
        },
        "rain": {
          ".validate": "true",
          ".read": "true"
        },
        "rpm": {
          ".validate": "true",
          ".read": "auth != null && auth.uid == $id"
        },
        "performance": {
          ".validate": "true",
          ".read": "auth != null && auth.uid == $id"
        }
      }
    }
  }
}
